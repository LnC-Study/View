<!DOCTYPE html>
<html>
<head>
    <!-- head, script, css files-->
    <% include ../extern.ejs %>
</head>

<body>
    <!--Top Menu-->
    <% include ../base/topMenu.ejs%>
    <!-- Banner -->
    <div class="jumbotron container-fluid text-center">
        <!-- Introduction-->
        <h1><b>Lovely & Communication</b></h1>
        <!-- Navigation-->
        <% include ../base/navigation.ejs %>
    </div>

    <!-- Board-->
    <div class="row board">
        <div class="card shadow p-3 mb-5 bg-white mx-auto" style="width: 50%; height: 250px;">
            <!-- Login text-->
            <div class="card-body">
                <h4 class="card-title text-center">로그인</h4>
            </div>
            <!-- Login data-->
            <div class="col-md-12 text-center">
                <div class="row">
                    <div class="col-md-3">
                        <label class="id mt-2">아이디 :</label>
                        <label class="pass mt-2">비밀번호 :</label>
                    </div>

                    <div class="col-md-6">
                        <input type="text" name="id" id="id" placeholder="이메일을 입력하세요" class="form-control last">
                        <input type="password" name="password" id="password" placeholder="비밀번호를 입력하세요" class="form-control">
                    </div>

                    <div class="col-md-3">
                        <!-- submit via [login] function-->
                        <button class="btn btn-sq btn-dark" onclick="login()">Sign in</button>
                        <!--
                        <a href="#" class="btn btn-sq btn-dark">
                            <i class="fa fa-user fa-5x"></i>
                            Sign <br>In
                        </a>
                        -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>