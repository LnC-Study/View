<div name="boardModals">
    <%for(var idx = 0; idx < boardData.length; idx++){%>
        <div class="modal fade" id="boardModal<%=idx%>" tabindex="-1" role="dialog" aria-labelledby="boardModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="boardModalLabel"><%=boardData[idx].title%></h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>
                            <%=boardData[idx].description%>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    <%}%>
</div>